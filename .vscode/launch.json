{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Container",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "launch",
            "port": 9998,
            "host": "localhost",
            "mode": "exec",
            "program": "/dev/go-remote-debug/app",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/dev/go-remote-debug"
                }
            ]
        }
    ]
}